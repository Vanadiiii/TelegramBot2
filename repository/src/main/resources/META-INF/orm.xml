<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm
http://java.sun.com/xml/ns/persistence/orm_1_0.xsd"
                 version="1.0">
    <description>My First JPA XML Application</description>
    <package>ru.dexsys.domain.entity</package>
    <entity class="ru.dexsys.domain.entity.UserEntity">
        <table name="USERS"/>

        <attributes>
            <id name="id">
                <column updatable="false" insertable="true" name="id"/>
            </id>
            <basic name="chatId"/>
            <basic name="name" optional="true"/>
            <basic name="phone" optional="true"/>
            <embedded name="birthday">
                <attribute-override name="day">
                    <column name="day" nullable="true"/>
                </attribute-override>
                <attribute-override name="month">
                    <column name="month" nullable="true"/>
                </attribute-override>
            </embedded>
        </attributes>
    </entity>
    <embeddable class="Birthday" access="FIELD"/>
</entity-mappings>